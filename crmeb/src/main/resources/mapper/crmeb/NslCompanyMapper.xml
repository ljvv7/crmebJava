<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zbkj.crmeb.nsl.nslemons.dao.NslCompanyMapper">

    <select id="getCompanyListByIds" resultType="com.zbkj.crmeb.nsl.nslemons.model.NslCompany">
        select id,name,logo,province,city,area,street,adds
        from `nsl_company`
        where kbn != 9 and id in (
        <foreach collection="ids" item="ids" separator=",">
            #{ids}
        </foreach>
        ) limit #{pageindex},#{pagesize};
    </select>

    <select id="getAuthmsgv1" resultType="java.lang.String">
        select value
        from `eb_system_config`
        where name = 'companyauthcoft'
    </select>
</mapper>
